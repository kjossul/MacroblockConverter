<Window x:Class="MacroblockConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MacroblockConverter"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Title="Macroblock Converter" Height="540" Width="960">
    <Grid>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Macroblock Converter" VerticalAlignment="Top" Height="35" Width="252" FontWeight="Bold" FontSize="24" Margin="0,10,0,0"/>
        <Button x:Name="btnFileExplorer" HorizontalAlignment="Left" Margin="10,74,0,0" VerticalAlignment="Top" Height="25" Width="115" Click="Button_File_Click" Content="Choose file"/>
        <Button x:Name="btnFolderExplorer" HorizontalAlignment="Left" Margin="130,74,0,0" VerticalAlignment="Top" Height="25" Width="115" Click="Button_Folder_Click" Content="Choose folder"/>
        <ListBox x:Name="logBox" Margin="10,279,10,10"/>
        <CheckBox x:Name="preserveTrimmedCheckbox" Content="Preserve trimmed macroblocks" HorizontalAlignment="Left" Margin="33,146,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <CheckBox x:Name="nullifyVariantsCheckbox" Content="Set base variants" HorizontalAlignment="Left" Margin="33,166,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <Button x:Name="convertButton" Content="Convert" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Height="25" Width="115" FontWeight="Bold" IsEnabled="False" Click="convertButton_ClickAsync"/>
        <CheckBox x:Name="createConvertedFolderCheckbox" Content="Create 'Converted' Folder" HorizontalAlignment="Left" Margin="33,187,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <CheckBox x:Name="convertBlocksToItems" Content="Convert missing Vista blocks to items" HorizontalAlignment="Left" Margin="318,148,0,0" VerticalAlignment="Top" IsChecked="True" Checked="convertBlocksToItems_Clicked" Unchecked="convertBlocksToItems_Clicked"/>
        <CheckBox x:Name="SnowRoadCheckbox" Content="SnowRoad" HorizontalAlignment="Left" Margin="422,170,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.25,-1.587" IsChecked="True"/>
        <CheckBox x:Name="RallyCastleCheckbox" Content="RallyCastle" HorizontalAlignment="Left" Margin="422,189,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.25,-1.587" IsChecked="True"/>
        <CheckBox x:Name="RallyRoadCheckbox" Content="RallyRoad" HorizontalAlignment="Left" Margin="422,209,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.25,-1.587" IsChecked="True"/>
        <CheckBox x:Name="TrackWallCheckbox" Content="TrackWall" HorizontalAlignment="Left" Margin="331,170,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.25,-1.587" IsChecked="True"/>
        <CheckBox x:Name="DecoWallCheckbox" Content="DecoWall" HorizontalAlignment="Left" Margin="331,189,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.25,-1.587" IsChecked="True"/>
        <CheckBox x:Name="DecoHillCheckbox" Content="DecoHill" HorizontalAlignment="Left" Margin="331,209,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.25,-1.587" IsChecked="True"/>
        <Label Content="General settings" HorizontalAlignment="Left" Margin="17,112,0,0" VerticalAlignment="Top" Foreground="#B2000000"/>
        <Label Content="Block to item conversion" HorizontalAlignment="Left" Margin="304,112,0,0" VerticalAlignment="Top" Foreground="#B2000000"/>
        <Rectangle HorizontalAlignment="Left" Height="92" Margin="25,138,0,0" VerticalAlignment="Top" Width="3" Fill="#33000000" RenderTransformOrigin="0.5,0.5">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Rectangle HorizontalAlignment="Left" Height="106" Margin="310,138,0,0" VerticalAlignment="Top" Width="3" Fill="#33000000" RenderTransformOrigin="0.5,0.5">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Label Content="Github / FAQ" HorizontalAlignment="Left" Margin="731,112,0,0" VerticalAlignment="Top" Foreground="#B2000000"/>
        <Rectangle HorizontalAlignment="Left" Height="106" Margin="737,138,0,0" VerticalAlignment="Top" Width="3" Fill="#33000000" RenderTransformOrigin="0.5,0.5">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <CheckBox x:Name="TransitionsCheckbox" Content="Transitions" HorizontalAlignment="Left" Margin="331,229,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.25,-1.587" IsChecked="True"/>
        <TextBlock HorizontalAlignment="Left" Margin="746,148,0,0" TextWrapping="Wrap" VerticalAlignment="Top">
            <Hyperlink NavigateUri="https://github.com/kjossul/MacroblockConverter/" RequestNavigate="OpenGithub">
                Github
            </Hyperlink>
        </TextBlock>
        <Label Content="Local items" HorizontalAlignment="Left" Margin="564,144,0,0" VerticalAlignment="Top" Foreground="#B2000000"/>
        <Rectangle HorizontalAlignment="Left" Height="74" Margin="577,170,0,0" VerticalAlignment="Top" Width="3" Fill="#33000000" RenderTransformOrigin="0.5,0.5">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Button x:Name="downloadItemsBtn" Content="Download items" HorizontalAlignment="Left" Margin="585,218,0,0" VerticalAlignment="Top" Height="27" Width="147" IsEnabled="False"/>
        <TextBlock x:Name="itemsStatusText" HorizontalAlignment="Left" Margin="585,174,0,0" TextWrapping="WrapWithOverflow" Text="Checking local items.." VerticalAlignment="Top" Height="39" Width="147"/>

    </Grid>
</Window>
