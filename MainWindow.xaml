<Window x:Class="MacroblockConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MacroblockConverter"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Title="Macroblock Converter" Height="540" Width="960">
    <Grid>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Macroblock Converter" VerticalAlignment="Top" Height="35" Width="252" FontWeight="Bold" FontSize="24" Margin="0,10,0,0"/>
        <Button x:Name="btnFileExplorer" HorizontalAlignment="Left" Margin="10,186,0,0" VerticalAlignment="Top" Height="25" Width="143" Click="Button_File_Click" Content="Choose file"/>
        <Button x:Name="btnFolderExplorer" HorizontalAlignment="Left" Margin="158,186,0,0" VerticalAlignment="Top" Height="25" Width="147" Click="Button_Folder_Click" Content="Choose folder"/>
        <ListBox x:Name="logBox" Margin="10,262,10,10"/>
        <CheckBox x:Name="preserveTrimmedCheckbox" Content="Preserve trimmed macroblocks" HorizontalAlignment="Left" Margin="24,97,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <CheckBox x:Name="nullifyVariantsCheckbox" Content="Set base variants" HorizontalAlignment="Left" Margin="24,117,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <Button x:Name="convertButton" Content="Convert" HorizontalAlignment="Left" Margin="10,218,0,0" VerticalAlignment="Top" Height="37" Width="295" FontWeight="Bold" IsEnabled="False" Click="convertButton_ClickAsync" FontSize="14"/>
        <CheckBox x:Name="convertBlocksToItems" Content="Convert missing Vista blocks to items" HorizontalAlignment="Left" Margin="318,97,0,0" VerticalAlignment="Top" IsChecked="True" Checked="convertBlocksToItems_Clicked" Unchecked="convertBlocksToItems_Clicked" IsEnabled="False"/>
        <CheckBox x:Name="SnowRoadCheckbox" Content="SnowRoad" HorizontalAlignment="Left" Margin="422,119,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.25,-1.587" IsChecked="True" IsEnabled="False"/>
        <CheckBox x:Name="RallyCastleCheckbox" Content="RallyCastle" HorizontalAlignment="Left" Margin="422,138,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.25,-1.587" IsChecked="True" IsEnabled="False"/>
        <CheckBox x:Name="RallyRoadCheckbox" Content="RallyRoad" HorizontalAlignment="Left" Margin="422,158,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.25,-1.587" IsChecked="True" IsEnabled="False"/>
        <CheckBox x:Name="TrackWallCheckbox" Content="TrackWall" HorizontalAlignment="Left" Margin="331,119,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.25,-1.587" IsChecked="True" IsEnabled="False"/>
        <CheckBox x:Name="DecoWallCheckbox" Content="DecoWall" HorizontalAlignment="Left" Margin="331,138,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.25,-1.587" IsChecked="True" IsEnabled="False"/>
        <CheckBox x:Name="DecoHillCheckbox" Content="DecoHill" HorizontalAlignment="Left" Margin="331,158,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.25,-1.587" IsChecked="True" IsEnabled="False"/>
        <Label Content="General settings" HorizontalAlignment="Left" Margin="10,61,0,0" VerticalAlignment="Top" Foreground="#B2000000"/>
        <Label Content="Block to item conversion" HorizontalAlignment="Left" Margin="304,61,0,0" VerticalAlignment="Top" Foreground="#B2000000"/>
        <Rectangle HorizontalAlignment="Left" Height="90" Margin="16,89,0,0" VerticalAlignment="Top" Width="3" Fill="#33000000" RenderTransformOrigin="0.5,0.5">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Rectangle HorizontalAlignment="Left" Height="168" Margin="310,87,0,0" VerticalAlignment="Top" Width="3" Fill="#33000000" RenderTransformOrigin="0.5,0.5">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Rectangle HorizontalAlignment="Left" Height="168" Margin="731,87,0,0" VerticalAlignment="Top" Width="3" Fill="#33000000" RenderTransformOrigin="0.5,0.5">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <CheckBox x:Name="TransitionsCheckbox" Content="Transitions" HorizontalAlignment="Left" Margin="423,178,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.25,-1.587" IsChecked="True" IsEnabled="False"/>
        <TextBlock HorizontalAlignment="Left" Margin="879,17,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" FontWeight="Bold">
            <Hyperlink NavigateUri="https://github.com/kjossul/MacroblockConverter/" RequestNavigate="OpenGithub">
                Github
            </Hyperlink>
        </TextBlock>
        <Label Content="Local items" HorizontalAlignment="Left" Margin="565,61,0,0" VerticalAlignment="Top" Foreground="#B2000000"/>
        <Rectangle HorizontalAlignment="Left" Height="168" Margin="571,87,0,0" VerticalAlignment="Top" Width="3" Fill="#33000000" RenderTransformOrigin="0.5,0.5">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Button x:Name="downloadItemsBtn" Content="Download items" HorizontalAlignment="Left" Margin="579,147,0,0" VerticalAlignment="Top" Height="27" Width="147" IsEnabled="False" Click="downloadItemsBtn_ClickAsync"/>
        <TextBlock x:Name="itemsStatusText" HorizontalAlignment="Left" Margin="579,95,0,0" TextWrapping="WrapWithOverflow" Text="Checking local items.." VerticalAlignment="Top" Height="39" Width="147"/>
        <CheckBox x:Name="convertGroundCheckbox" Content="Convert Ground mode to Air" HorizontalAlignment="Left" Margin="24,137,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <CheckBox x:Name="CanopyCheckbox" Content="Canopy" HorizontalAlignment="Left" Margin="423,198,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.25,-1.587" IsChecked="True" IsEnabled="False"/>
        <CheckBox x:Name="StageCheckbox" Content="Stage" HorizontalAlignment="Left" Margin="331,198,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.25,-1.587" IsChecked="True" IsEnabled="False"/>
        <CheckBox x:Name="ignoreVegetationCheckbox" Content="Ignore vegetation" HorizontalAlignment="Left" Margin="24,157,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <CheckBox x:Name="OverrideVistaDecoWallCheckbox" Content="Override Vista DecoWall" HorizontalAlignment="Left" Margin="331,218,0,0" VerticalAlignment="Top" IsChecked="False" IsEnabled="False"/>
        <Label Content="Target" HorizontalAlignment="Left" Margin="724,61,0,0" VerticalAlignment="Top" Foreground="#B2000000"/>
        <Label Content="Convert to:" HorizontalAlignment="Left" Margin="734,89,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="StadiumCheckbox" Content="Stadium" HorizontalAlignment="Left" Margin="739,116,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <CheckBox x:Name="RedIslandCheckbox" Content="RedIsland" HorizontalAlignment="Left" Margin="739,137,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <CheckBox x:Name="BlueBayCheckbox" Content="BlueBay" HorizontalAlignment="Left" Margin="739,157,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <CheckBox x:Name="GreenCoastCheckbox" Content="GreenCoast" HorizontalAlignment="Left" Margin="832,117,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <CheckBox x:Name="WhiteShoreCheckbox" Content="WhiteShore" HorizontalAlignment="Left" Margin="832,137,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <Label Content="Note: source collection is skipped &#xD;&#xA;automatically, no need to uncheck it." HorizontalAlignment="Left" Margin="734,176,0,0" VerticalAlignment="Top" Foreground="#B2000000" Height="44"/>
        <CheckBox x:Name="HillsShortCheckbox" Content="HillsShort" HorizontalAlignment="Left" Margin="331,178,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.25,-1.587" IsChecked="True" IsEnabled="False"/>

    </Grid>
</Window>
